###############
#  Utilities  #
###############

snippet center "center"
\begin{center}
	${1:${VISUAL}}
\end{center}
endsnippet

snippet r "\\ref{}" w
\ref{$1}
endsnippet

snippet ni "ni"
\noindent
$1
endsnippet

snippet rfig "ref figure"
${1:Figure}~\ref{${2:fig:}}${3}
endsnippet

snippet rtab "ref table"
${1:Table}~\ref{${2:tab:}}${3}
endsnippet

snippet rlist "ref listing"
${1:Listing}~\ref{${2:list}}${3}
endsnippet

snippet rsec "ref section"
${1:Section}~\ref{sec:${2}} ${3}
endsnippet

snippet req "ref eqn"
${1:Eqn.}~\ref{eq:${2}} ${3}
endsnippet

snippet rpage "page"
${1:page}~\pageref{${2}} ${3}
endsnippet

snippet index "index"
\index{${1:index}} ${2}
endsnippet

#Citations
snippet cite "vanilla cite"
\cite{$1} ${2}
endsnippet

# bibtex commands
snippet citep "citep"
\citep{$1} ${2}
endsnippet

snippet citet "citet"
\citet{$1} ${2}
endsnippet

snippet citen "cite ?"
\cite[${1}]{${2}} ${3}
endsnippet

snippet fcite "foot cite"
\footcite[${1}]{${2}}${3}
endsnippet

#Formating text: italic, bold, underline, small capital, emphase ..
snippet it "it"
\textit{${1:text}}
endsnippet

snippet bf "bf"
\textbf{${1:text}}
endsnippet

snippet under "under"
\underline{${1:text}}
endsnippet

snippet emp "emp"
\emph{${1:text}}
endsnippet

snippet sc "sc"
\textsc{${1:text}}
endsnippet

#Choosing font
snippet sf "sf"
\textsf{${1:text}}
endsnippet

snippet rm "rm"
\textrm{${1:text}}
endsnippet

snippet tt "tt"
\texttt{${1:text}}
endsnippet

#misc
snippet ft "ft"
\footnote{${1:text}}
endsnippet

snippet figure "figure"
\begin{figure}[h]
	\begin{center}
		\includegraphics[width=0.8\linewidth]{$1}
	\end{center}
	\caption{$3}
	\label{fig:$4}
\end{figure}
endsnippet

snippet tikz "tikz"
\begin{figure}
	\begin{center}
		\begin{tikzpicture}[scale=${1:1}]
			${2}
		\end{tikzpicture}
	\end{center}
	\caption{${3}}
	\label{fig:${4}}
\end{figure}
endsnippet

snippet graphics "bare includegraphics"
\includegraphics[width=0.8\textwidth]{${1}}
endsnippet

snippet columns "columns"
\begin{columns}
	\begin{column}[l]{0.5\textwidth}
	${1}
	\end{column}
	\begin{column}[l]{0.5\textwidth}
	${2}
	\end{column}
\end{columns}
endsnippet

snippet frame "frame"
\begin{frame}
	\frametitle{${1:title}}
	${2}
\end{frame}
$0
endsnippet

snippet block "block"
\begin{block}{${1:title}}
	${2}
\end{block}
$0
endsnippet

snippet alert "alert"
\begin{alertblock}{${1:title}}
	${2}
\end{alertblock}
$0
endsnippet

snippet example "example"
\begin{exampleblock}{${1:title}}
	${2}
\end{exampleblock}
endsnippet

snippet color "use color"
\textcolor{${1:red}}{${2:${VISUAL}}}$0
endsnippet

