extends texmath

# template

snippet template "template document"
\documentclass[10pt,letterpaper]{article}

\usepackage[usenames,dvipsnames,svgnames,table]{xcolor}
\usepackage{fullpage}
\usepackage{graphicx}
\usepackage{hyperref}
\usepackage{amsmath}
\usepackage{amssymb}
\usepackage{amsfonts}
\usepackage{amsthm}
\usepackage{booktabs}

\title{${1:title}}

\author{${2:author}}

\begin{document}
\maketitle

\begin{abstract}
${3:abstract}
\end{abstract}

\section{${4:section}}

\bibliographystyle{plainurl}
\bibliography{paper}

\end{document}
endsnippet

# general

snippet "b(egin)?" "begin{} / end{}" br
\begin{${1:something}}
	${0:${VISUAL}}
\end{$1}
endsnippet

# packages

snippet "packages" "common packages"
\usepackage{graphicx}
\usepackage{subfigure} 
\usepackage{algorithm}
\usepackage{algorithmic}
\usepackage{hyperref}
\usepackage{amsmath}
\usepackage{amssymb}
\usepackage{amsfonts}
\usepackage{amsthm}
\usepackage{shortbold}
\usepackage{booktabs}
endsnippet

#usepackage
snippet usepac "usepackage"
\usepackage[${1:options}]{${2:package}} ${3}
endsnippet

####################
# TABULARS, ARRAYS #
####################

snippet tab
\begin{${1:t}${1/(t)$|(a)$|(.*)/(?1:abular)(?2:rray)/}}{${2:c}}
$0${2/((?<=.)c|l|r)|./(?1: & )/g}
\end{$1${1/(t)$|(a)$|(.*)/(?1:abular)(?2:rray)/}}
endsnippet

snippet table
\begin{table}
	\begin{center}
	\begin{tabular}{ l c }
	${1:}
	\end{tabular}
	\end{center}
	\caption{${2:}}
	\label{${3:tab:foo}}
\end{table}
$0
endsnippet

