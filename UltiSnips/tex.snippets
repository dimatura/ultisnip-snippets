snippet tabular "tabular example"
\begin{tabular}{p{.30\linewidth} p{.20\linewidth} p{.20\linewidth} }
	\toprule
	\addlinespace
	header1               & header2   & header3  \\
	\cmidrule(l){1-1} \cmidrule(lr){2-2} \cmidrule(l){3-3}
	\addlinespace
	row1                  & 429       & 762      \\
	\addlinespace
	row2                  & 1196      & 1196     \\
	\addlinespace
	row3                  & 1195      & 1195     \\
	row4                  & 1195      & 1195     \\
	\bottomrule
\end{tabular}
endsnippet

########################
# ENUM, DESCR, ITEMIZE #
########################

snippet een "Enumerate" b
\begin{enumerate}
	\item $0
\end{enumerate}
endsnippet

snippet eit "Itemize" b
\begin{itemize}
	\item $0
\end{itemize}
endsnippet

snippet ede "Description" b
\begin{description}
	\item[$1] $0
\end{description}
endsnippet

# Endless new item
snippet ]i "]i"
\item ${1}
${2:]i}
endsnippet

snippet itd "itd"
\item[${1:description}] ${2:item}
endsnippet



